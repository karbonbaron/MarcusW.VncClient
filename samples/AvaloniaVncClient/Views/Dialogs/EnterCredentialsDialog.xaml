<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaVncClient.Views.Dialogs.EnterCreadentialsDialog"
        Width="450" Height="180" CanResize="False"
        WindowStartupLocation="CenterOwner"
        Title="Credentials Authentication">

    <Grid Margin="10" RowDefinitions="*,Auto,Auto,Auto,*,Auto">
        <TextBlock Grid.Row="1" Text="Please enter username and password to authenticate:" />

        <TextBox Grid.Row="2" Watermark="Username" Margin="0,10" Name="UsernameTextBox" PasswordChar="•" />
        <TextBox Grid.Row="3" Watermark="Password" Margin="0,10" Name="PasswordTextBox" PasswordChar="•" />

        <Grid Grid.Row="4" HorizontalAlignment="Right" IsSharedSizeScope="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="DialogButtons" />
                <ColumnDefinition SharedSizeGroup="DialogButtons" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Cancel" Margin="10,0,0,0" Click="OnCancelClick" />
            <Button Grid.Column="1" Content="OK" Margin="10,0,0,0" Click="OnOkClick" />
        </Grid>
    </Grid>
</Window>
